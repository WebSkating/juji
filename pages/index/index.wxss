.tab-switch {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tab-switch-inner{
  width:100%;
  padding:0 20%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tab-switch-btn {
  width: 140rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
  box-sizing: border-box;
  border-bottom: 2px solid #FFFFFF;
  text-align: center;
  line-height: 80rpx;
}

.switch-btn-active{
  border-bottom: 2px solid #FF4048;
}

.map-container {
  position: absolute;
  top: 80rpx;
  bottom:0;
  width: 100%;
}
